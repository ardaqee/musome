-- Load the OrionLib library
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Create the main window
local Window = OrionLib:MakeWindow({
    Name = "Pet Sending Hub",  -- Window title
    HidePremium = false,  -- Hide premium users
    SaveConfig = true,  -- Save configuration
    ConfigFolder = "PetSendingConfig"  -- Configuration folder
})

-- Add a tab
local Tab = Window:MakeTab({
    Name = "Pet Sending",
    Icon = "rbxassetid://4483345998",  -- Tab icon
    PremiumOnly = false
})

